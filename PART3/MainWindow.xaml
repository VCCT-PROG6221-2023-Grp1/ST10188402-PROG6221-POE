<Window x:Class="PART3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Manager" Height="350" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Create Recipe" Width="150" Margin="0 0 0 10" Click="btnCreateRecipe_Click"/>
            <Button Content="Scale Recipe" Width="150" Margin="0 0 0 10" Click="btnScaleRecipe_Click"/>
            <Button Content="Reset Recipe" Width="150" Margin="0 0 0 10" Click="btnResetRecipe_Click"/>
            <Button Content="Show All Recipes" Width="150" Margin="0 0 0 10" Click="btnShowAllRecipes_Click"/>
            <Button Content="Filter All Recipes" Width="150" Margin="0 0 0 10" Click="btnFilter_Click"/>
            <Button Content="Delete Recipe" Width="150" Click="btnDeleteRecipe_Click"/>
        </StackPanel>
    </Grid>
</Window>
